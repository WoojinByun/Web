extends layout
block content
  .container-fluid
    // Page Heading
    .row
      .col-lg-12
        h1.page-header
          | 출석 체크
          br
          small  Check Attendance 
    // /.row
    .row
      .col-lg-8.col-lg-offset-2
        .form-group
          form#upload-image-form(action='/checkAttend', method='post', enctype='multipart/form-data')
            .wrapper.row
              .col-lg-12
                #image-preview-div
                  img.preview-img(src='/img/noimage.png').center-block
                .form-group
                  input.upload-file(type='file', name='uploadFile', required='').center-block
            .wrapper.row.center-block.time-list
              select.form-control(name='timeData')
                if params.timeDatas
                  each timeData in params.timeDatas
                    option(value=timeData.couNum + "/" + timeData.order + "/" + timeData.time) #{timeData.timeString}
            .wrapper.row.text-center
              button#upload-button.btn.btn-lg.btn-primary(type='submit') Do Attend!
          
        
  script(src='/js/register.js')
