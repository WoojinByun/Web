doctype html
html(lang='en')
  head
    include includes/meta.jade
    title #{title}
    include includes/common.jade
    block headExtra
  body
    #wrapper
      // Navigation
      block navbar
        nav.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
          .navbar-inner-wrapper
            .navbar-header
              button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-ex1-collapse')
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
              a.navbar-brand(href='/') I'm Here
            // Top Menu Items
            ul.nav.navbar-left.top-nav
              li#attDetailMenu.dropdown
                a.dropdown-toggle(href='#', data-toggle='dropdown')
                  i.fa.fa-address-card
                  |  내 출석 현황
                  b.caret
                ul.dropdown-menu.message-dropdown
                  each course in params.courses
                    li.navbar-inverse
                      a(href='/attend/#{course.couNum}')
                        i.fa.fa-book.chkAttMenu
                          h4.txt-center.chkAttStr #{course.couName}
                            span.small.text-muted
                            |  - #{course.proName}
              li
                a(href='/schedule')
                  i.fa.fa-calendar
                  |  시간표
              li#attChkMenu.dropdown
                a.dropdown-toggle(href='#', data-toggle='dropdown')
                  i.fa.fa-check
                  |  출석체크
                  b.caret
                ul.dropdown-menu.message-dropdown
                  li.navbar-inverse
                    a(href='/checkAttend')
                      i.fa.fa-file-photo-o.chkAttMenu
                        h4.txt-center.chkAttStr 사진
                  li.navbar-inverse
                    a(href='/classAttend')
                      i.fa.fa-camera.chkAttMenu
                        h4.txt-center.chkAttStr 웹캠
              li
                a(href='/QR_CODE.png')
                  i.fa.fa-qrcode
                  |  QR CODE
            ul.nav.navbar-right.top-nav
              li.dropdown
                a.dropdown-toggle(href='#', data-toggle='dropdown')
                  i.fa.fa-user
                  |  #{params.user.name}
                  b.caret
                ul.dropdown-menu
                  li
                    a(href='/register')
                      i.fa.fa-fw.fa-gear
                      |  얼굴 등록
                  li.divider
                  li
                    a(href='/logout')
                      i.fa.fa-fw.fa-power-off
                      |  로그아웃
            // /.navbar-collapse
      #page-wrapper
        block content
      // /#page-wrapper
    // /#wrapper
    #mob-wrapper
      .navbar-header.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
        button.menuButton.navbar-toggle.collapsed(aria-controls='bs-navbar', aria-expanded='false', data-target='#bs-navbar', data-toggle='collapse', type='button')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='/') I'm Here
      nav#bs-navbar.navbar-inverse.navbar-collapse.collapse(aria-expanded='false', style='height: 1px;')
        a.test
          i.fa.fa-user
          | #{params.user.name}
        ul
          a(href='/schedule')
            i.fa.fa-calendar
            | 시간표
          a(href='/register')
            i.fa.fa-gear
            | 얼굴 등록
          a(href='/logout')
            i.fa.fa-power-off
            | 로그아웃
        a
          i.fa.fa-check
          | 출석체크
        ul
          a(href='/checkAttend')
            i.fa.fa-file-photo-o
            | 사진
          a(href='/classAttend')
            i.fa.fa-camera
            | 웹캠
        a
          i.fa.fa-address-card
          | 내 출석 현황
        ul
        each course in params.courses
          ul.message-preview
            a(href='/attend/#{course.couNum}')
              i.fa.fa-book
              | #{course.couName}
              span.small.text-muted
                |  - #{course.proName}
        
        // /.navbar-collapse
      #page-wrapper
        block content
